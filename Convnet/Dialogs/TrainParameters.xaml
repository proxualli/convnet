            <TextBox.Text>
                <Binding Path="Rotation" Mode="TwoWay" StringFormat="{}{0:R}">
                    <Binding.ValidationRules>
                        <c:FloatRangeRule Min="0" Max="180"/>
                    </Binding.ValidationRules>
