                                                    <TextBlock Text="{Binding GroupIndex}" Foreground="Black" FontSize="14" Margin="3"/>
                                                </StackPanel>
                                            </Expander.Header>
                                            <Expander.Content>
                                                <ItemsPresenter/>
                                            </Expander.Content>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
